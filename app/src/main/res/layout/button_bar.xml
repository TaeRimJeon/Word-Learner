<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:id="@+id/svButtonContainer">

        <FrameLayout
            android:id="@+id/flButtonBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/svButtonContainer"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/bCancelorDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/main_button_red"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close" />

        <ImageButton
            android:id="@+id/bSpeak"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/main_button_blue"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_volume_high" />


        <ImageButton
            android:id="@+id/bEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/main_button_yellow"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pencil" />

        <ImageButton
            android:id="@+id/bDone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/main_button_green"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check" />

    </LinearLayout>
</RelativeLayout>