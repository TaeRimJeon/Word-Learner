<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AddActivity" parent="Theme.Design">
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>
    <style name="Theme.Design" parent="Base.Theme.Design">
    </style>

    <style name="Base.Theme.Design" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>


    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sort</item>
    </style>



    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#7c000000</item>
        <item name="sv_showcaseColor">#315d80</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomSubTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSubTitle" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#ffffffff</item>
    </style>
</resources>
